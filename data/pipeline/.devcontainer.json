{
    "name": "Python pipeline with Postgres",
    "dockerComposeFile": ["../../docker-compose.yml", "../../docker-compose.dev.yml"],
    "service": "pipeline",
    "workspaceFolder": "/src",
    // Don't shutdown so that we can continue using the stack for web dev in another window.
    "shutdownAction": "none",
    // Maybe add this to a custom Dockerfile when the requirements are stable.
    "postCreateCommand": "pip3 install -r /src/requirements.txt"
}